.home
  width 100%
  min-height 540px
  background-size cover
  margin 0 auto
  background url(../../images/baa18ac03f0d4bbe9bdc6c4f4762dfd0.jpg)no-repeat center
  opacity 0.8
  nav
    width 100%
    height 40px
    background #2db7f5
    span
      color #fff
      width 150px
      height 30px
      line-height 30px
      text-align center
      float left
      margin 5px 0 0 120px
  .showWords
    width 100%
    height 460px
    input
      width 100%
      height 460px
      opacity 0
      border none
  .operation
    width 100%
    height 130px
    background #ccc
    .toolkit
      width 95%
      height 50px
      margin 0 auto
      .tool-items
        width 60px
        height 40px
        float left
        margin 10px
        input
          width 50px
          height 27px
          border none
          color #fff
          background #ccc
    .send
      width 95%
      height 40px
      margin 0 auto
      line-height 40px
      .send-item1
        width 240px
        height 30px
        line-height 30px
        float left
        margin 10px 0 0 10px
        input
          width 240px
          height 30px
          border 1px solid #2db7f5
          border-radius 5px
          padding 10px
          box-sizing border-box
      .send-item2
        width 60px
        height 30px
        line-height 30px
        float left
        margin 10px 0  0 10px
        button
          width 60px
          height 30px
          background #2db7f5
          border 1px solid #2db7f5
          border-radius 5px



