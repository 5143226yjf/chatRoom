.home
  width 100%
  min-height 500px
  background-size cover
  margin 0 auto
  background url(../../images/baa18ac03f0d4bbe9bdc6c4f4762dfd0.jpg)no-repeat center
  opacity 0.7
  clear both
  overflow hidden
  .showWords
    width 100%
    height 410px
    overflow scroll
    color #ccc
    p
      min-width 100px
      min-height 26px
      line-height 26px
      margin 10px
      border-radius 6px
      background: #fff
      .headImg
        width 20px
        height 20px
        line-height 20px
        margin-left 6px
      span
        height 26px
        line-height 26px
  .operation
    width 100%
    min-height 100px
    margin 0 auto
    position absolute
    bottom 0
    left 0
    right 0
    .send
      width 95%
      height 40px
      background #ccc
      margin 0 auto
      line-height 40px
      .send-item1
        width 200px
        height 30px
        line-height 30px
        float left
        margin 10px 0 0 10px
        input
          width 200px
          height 30px
          border 1px solid #2db7f5
          border-radius 5px
          padding 10px
          box-sizing border-box
          outline none
      .send-item2
        width 60px
        height 30px
        line-height 30px
        float left
        margin 10px 0 0  10px
        button
          width 60px
          height 30px
          background #2db7f5
          border 1px solid #2db7f5
          border-radius 5px
          color #fff
          outline none
    .toolkit
      background #ccc
      width 95%
      height 50px
      margin 0 auto
      .tool-items
        width 46px
        height 30px
        float left
        margin 10px 6px
        input
          width 46px
          height 27px
          border none
          color #fff
          background #ccc
          outline none
          overflow hidden
    .showTool
      display none
      max-width 400px
      height 100px
      background #fff
      overflow scroll
      ul
        clear both
        width 100%
        li
          list-style none
          text-align center
          width 40px
          height 30px
          line-height 30px
          font-size 14px
          border-radius 5px
          background #ddd
          margin 8px
          float left
      img
        margin 2px
        padding 2px
        width 25px
        height 25px
      img:hover
        background-color blue


